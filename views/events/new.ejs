<%- include('../partials/headStart') %>
    <link rel="stylesheet" href="/stylesheets/announcements/form.css">
<%- include('../partials/headEnd') %>

<body id="body" class="mode">

<%- include('../partials/components/navbar') %>
<%- include('../partials/components/header') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
          <div class="jumbotron text-center header">
            <h1><i class="fas fa-<%=data.icon%>"></i> <%=data.name%> - New Post</h1>
            <a class="btn btn-primary" href="/events"><i class="fas fa-arrow-left"></i> Back</a>
          </div>

        </div>
    </div>
</div>


<div class="row">
	<div class="col-md-8 offset-md-2 col-12">
		<div class="form-container">
			<form action="/events/" method="post" enctype="multipart/form-data">
				<div class="form-group mode">
					<label for="subject">Subject</label>
					<input type="text" class="form-control mode" name="subject" placeholder="Event Subject" maxlength="50" required>
				</div><br />

				<div class="form-group mode">
					<label for="message">Content</label>
					<textarea minlength="20" class="form-control mode" name="message" rows="5" placeholder="A Short Description" required></textarea>
				</div>
        <br>

        <div class="form-group mode">
          <label for="update-time-input">Date/Deadline</label><br/>
          <select name="month" class="mode" style="width: 30%;">
          <% let months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];%>
          <% for (let month of months) { %>
              <option value="<%=months.indexOf(month)%>"><%=month%></option>
          <% } %>
          </select>
          <select name="day" class="mode" style="width: 10%;">
          <% for (let i = 1; i <= 31; i++) { %>
              <option value="<%=i%>" ><%=i%></option>
          <% } %>
          </select>
          <select name="year" class="mode" style="width: 10%;">
            <% let year;%>
            <% for (let i = 0; i <= 5; i++) { %>
                <% year = parseInt((new Date()).toString().split(' ')[3]);%>
                <option value="<%=year+i%>" <%=year%>><%=year+i%></option>
            <% } %>
            </select>
      </div><br>

        <div id="slide-header">
					<button type="button" onclick="addSlide()" class="btn btn-primary"><i class="fas fa-plus"></i> Link</button>
					<br/><br/>
				</div>
				<div id="links"></div>

        <div id="media-header">
					<button type="button" onclick="upload()" class="btn btn-primary"><i class="fas fa-plus"></i> File Upload</button>
					<br/><br/>
				</div>
				<div id="uploads"></div>
				
				<div id="image-header">
					<button type="button" onclick="addImg()" class="btn btn-primary"><i class="fas fa-plus"></i> Image URL</button>
					<br/><br/>
				</div>
				<div id="image-block"></div>
				
				<button type="submit" class="btn btn-primary btn-block">Post</button>
				<br/>
			</form>
		</div>
	</div>
  <script src="/javascript/slide-url.js"></script>
  <script src="/javascript/upload-input.js"></script>
  <script src="/javascript/image-url.js"></script></div>
</body>
</html>
