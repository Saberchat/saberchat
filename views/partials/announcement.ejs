<div id="announcement-component">
  <% if (announcements.length > 0 && currentUser) { %>

    <% if (announcements.length == 1) { %>
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="text-align: center; margin-bottom: 0px; border-radius: 25px; padding: 20px; border-color: black; border-width:2px; width: 100%">
        <div class="carousel-inner" style="background-color: #eb5a52; border-radius: 25px; border-color: black; border-width:2px; ">

          <div class="carousel-item active" style="background-color: #eb5a52; border-radius: 25px; padding: 20px; border-color: black; border-width:2px;">
            <img class="profile-img" src="<%=announcements[0].sender.imageUrl%>"/>
            <a style="color: white;" href="announcements/<%=announcements[0]._id%>"><span><strong><%=announcements[0].sender.username%></strong>: <strong><em><%=announcements[0].subject%></em> (Read More) </strong> <span style="font-size: 10px;"><%=announcements[0].date.split(', ')[1]%> | <%=announcements[0].date.split(', ')[0]%></span></span></a>
            <br />
          </div>
      </div>
    </div>

    <% } else if (announcements.length < 5) { %>
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="text-align: center; margin-bottom: 0px; border-radius: 25px; padding: 20px; border-color: black; border-width:2px; width: 100%">
        <div class="carousel-inner" style="background-color: #eb5a52; border-radius: 25px; border-color: black; border-width:2px; ">

          <div class="carousel-item active" style="background-color: #eb5a52; border-radius: 25px; padding: 20px; border-color: black; border-width:2px; ">
            <img class="profile-img" src="<%=announcements[0].sender.imageUrl%>"/>
            <a style="color: white;" href="announcements/<%=announcements[0]._id%>"><span><strong><%=announcements[0].sender.username%></strong>: <strong><em><%=announcements[0].subject%></em> (Read More) </strong> <span style="font-size: 10px;"><%=announcements[0].date.split(', ')[1]%> | <%=announcements[0].date.split(', ')[0]%></span></span></a>
            <br />
          </div>

          <% announcements.slice(1).forEach(i => { %>
            <div class="carousel-item" style="background-color: #eb5a52; border-radius: 25px; padding: 20px; border-color: black; border-width:2px; ">

              <img class="profile-img" src="<%=i.sender.imageUrl%>"/>
              <a style="color: white;" href="announcements/<%=i._id%>"><span><strong><%=i.sender.username%></strong>: <strong><em><%=i.subject%></em> (Read More) </strong> <span style="font-size: 10px;"><%=i.date.split(', ')[1]%> | <%=i.date.split(', ')[0]%></span></span></a>
              <br />
            </div>
          <%})%>

        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

    <% } else { %>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="text-align: center; margin-bottom: 0px; border-radius: 25px; padding: 20px; border-color: black; border-width:2px; width: 100%">
          <div class="carousel-inner" style="background-color: #eb5a52; border-radius: 25px; border-color: black; border-width:2px; ">

            <div class="carousel-item active" style="background-color: #eb5a52; border-radius: 25px; padding: 20px; border-color: black; border-width:2px;">
              <img class="profile-img" src="<%=announcements[0].sender.imageUrl%>"/>
              <a style="color: white;" href="announcements/<%=announcements[0]._id%>"><span><strong><%=announcements[0].sender.username%></strong>: <strong><em><%=announcements[0].subject%></em> (Read More) </strong> <span style="font-size: 10px;"><%=announcements[0].date.split(', ')[1]%> | <%=announcements[0].date.split(', ')[0]%></span></span></a>
              <br />
            </div>

            <% [...Array(4).keys()].forEach(i => { %>
              <div class="carousel-item" style="background-color: #eb5a52; border-radius: 25px; padding: 20px; border-color: black; border-width:2px;">
                <img class="profile-img" src="<%=announcements[i+1].sender.imageUrl%>"/>

                <a style="color: white;" href="announcements/<%=announcements[i+1]._id%>"><span><strong><%=announcements[i+1].sender.username%></strong>: <strong><em><%=announcements[i+1].subject%></em> (Read More) </strong> <span style="font-size: 10px;"><%=announcements[i+1].date.split(', ')[1]%> | <%=announcements[i+1].date.split(', ')[0]%></span></span></a>
                <br />
              </div>
            <%})%>

          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    <% }%>
  <%}%>

</div>
