<!DOCTYPE html>
<html>
<head>
    <title>Saberchat</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <!-- link css for navbar. Don't need to include public/javascript/userForm.js since user is already logged in and does not need to access login and register forms.  -->
    <link rel="stylesheet" href="/stylesheets/components/navbar.css">
    <link rel="stylesheet" href="/stylesheets/components/header.css">
    <link rel="stylesheet" href="/stylesheets/profile/show.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

    <!-- I'm using my fontawesome kit -->
    <script src="https://kit.fontawesome.com/dccc745c41.js" crossorigin="anonymous"></script>
</head>
<body>
    <!-- include the navbar via ejs -->
    <%- include('../partials/navbar') %>

    <!-- big background image -->
    <div id="banner" style="background-image: url('<%= user.bannerUrl %>');">
    </div>
    <div class="container mb-5">
        <img src="<%= user.imageUrl %>" alt="profile image" class="profile-image">
        <h1 class="username"><%= user.username %></h1>
        <div class="row">
            <div class="col-md-4 col-12 order-md-2">
                <section class="profile-card">
                    <div class="profile-head">
                        <h1><%= user.firstName %> <%= user.lastName %></h1>
                        <hr>
                    </div>
                    <div class="profile-body">
                        <span><%= user.title %></span>

                        <h4>Role</h4>
                        <% permMatrix = [["principal", "Principal"], ["admin", "Administrator"], ["mod", "Moderator"], ["student", "Student"]] %>

                        <% for (let perm of permMatrix) { %>
                          <% if (user.permission.toLowerCase() == perm[0].toLowerCase()) { %>
                            <p><%= perm[1] %></p>
                          <% } %>
                        <% } %>

                        <h4>Status</h4>
                        <p><%= user.status.charAt(0).toUpperCase() + user.status.slice(1) %></p>

                        <h4>Email</h4>
                        <p><%= user.email %></p>

                        <% if (currentUser._id.toString() == user._id.toString()) { %>
                          <button class="btn btn-primary" style="margin-right: 10px; margin-bottom: 10px; width: 100%;"><a style="color: white" href="/profiles/edit">Edit Profile Settings</a></button>
                          <button class="btn btn-info" style="margin-right: 10px; margin-bottom: 10px; width: 100%;"><a style="color: white" href="/profiles/change-login-info">Edit Account Settings</a></button>

                        <% } else if (!(user._id.toString() == currentUser._id.toString()) && (user.status == "faculty")) { %>

                          <% if (user.followers.includes(currentUser._id)) { %>
                            <button type="button" class="btn btn-danger" style="margin-right: 10px; margin-bottom: 10px; width: 100%;"><a style="color: white" data-toggle="modal" data-target="#modal" id="delete-button" href="/profiles/unfollow/<%=user._id%>">Unfollow</a></button>

                            <div class="modal fade" id="modal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                              <div class="modal-dialog">
                                <div class="modal-content">
                                  <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Unfollow <%=user.firstName%> <%=user.lastName%>?</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                      <span aria-hidden="true">&times;</span>
                                    </button>
                                  </div>
                                  <div class="modal-body">
                                    You will no longer be notified when <%=user.firstName%> <%=user.lastName%> posts anything new.%>
                                  </div>
                                  <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No, Go Back</button>
                                    <a type="button" href="/profiles/unfollow/<%=user._id%>" class="btn btn-danger">Yes, Unfollow</a>
                                  </div>
                                </div>
                              </div>
                            </div>

                          <% } else { %>
                            <button type="button" class="btn btn-primary" style="margin-right: 10px; margin-bottom: 10px; width: 100%;"><a style="color: white" data-toggle="modal" data-target="#modal" id="delete-button" href="/profiles/follow/<%=user._id%>">Follow</a></button>

                            <div class="modal fade" id="modal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                              <div class="modal-dialog">
                                <div class="modal-content">
                                  <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Follow <%=user.firstName%> <%=user.lastName%>?</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                      <span aria-hidden="true">&times;</span>
                                    </button>
                                  </div>
                                  <div class="modal-body">
                                    You will be notified when <%=user.firstName%> <%=user.lastName%> posts anything new.%>
                                  </div>
                                  <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No, Go Back</button>
                                    <a type="button" href="/profiles/follow/<%=user._id%>" class="btn btn-primary">Yes, Follow</a>
                                  </div>
                                </div>
                              </div>
                            </div>

                          <% } %>
                        <% } %>
                    </div>
                </section>
            </div>
            <div class="col-md-8 col-12">
                <section class="profile-desc">
                    <div class="desc-head">
                        <h1>Description</h1>
                        <hr>
                    </div>
                    <div class="desc-body">
                        <p><%= user.description %></p>
                    </div>
                </section>
            </div>
        </div>
    </div>
</body>
</html>
