<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Saberchat</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
          integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/components/header.css">
    <link rel="stylesheet" href="/stylesheets/components/navbar.css">
    <link rel="stylesheet" href="/stylesheets/components/announcement.css">
    <link rel="stylesheet" href="/stylesheets/announcements/index.css">
    <link rel="stylesheet" href="/stylesheets/home/index.css">
    <link rel="stylesheet" href="/stylesheets/chat/new.css">
    <link rel="stylesheet" href="/stylesheets/wHeights/questions.css">

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/@popperjs/core@2" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
            integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
            crossorigin="anonymous"></script>

    <script src="https://kit.fontawesome.com/dccc745c41.js" crossorigin="anonymous"></script>
    <script src="/javascript/nav/userForm.js"></script>
    <script src="/javascript/nav/navbar.js"></script>
    <script src="/javascript/home/index.js"></script>

    <%- include('../partials/navbar') %>
    <%- include('../partials/header') %>

</head>
<body class="mode">
<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="jumbotron text-center">
                <h1><i class="fas fa-bullhorn"></i> Announcements</h1>
                <p>The latest news from staff</p>
                <% if (currentUser) { %>
                    <% if (["admin", "principal"].includes(currentUser.permission) || currentUser.status == "faculty") { %>
                        <a href="/announcements/new" class="btn btn-primary button-text"><i class="fas fa-bullhorn"></i>
                            Send Announcement</a>
                    <% } %>
                    <a href="/announcements/mark-all" class="btn btn-success button-text"><i
                                class="fas fa-check-square"></i> Mark All As Read</a>
                <% } %>
            </div>
        </div>
    </div>

    <div class="search-filter mb-3">
        <i class="fas fa-search"></i>
        <input id="search-input" oninput="searchFunction()" class="form-control" type="text" placeholder="Search..."
               title="Type in announcement segment"/>
    </div>
    <br/>

    <% announcements.forEach(announcement => { %>

        <div class="row">
            <div class="col-lg-12">
                <article class="text-block" id="<%= announcement._id %>">
                    <div class="block-header grey">
                        <h5>
                            <% if (currentUser) { %>
                                <% let index = -1 %>
                                <% for (let i = 0; i < currentUser.annCount.length; i += 1) { %>
                                    <% if (currentUser.annCount[i].announcement.toString() == announcement._id.toString()) { %>
                                        <% index = i; %>
                                    <% } %>
                                <% } %>

                                <% if (index != -1) { %>
                                    <% if (currentUser.annCount[index].version == "new") { %>
                                        <a href="/announcements/<%= announcement._id %>"
                                           class="button-text"><%= announcement.subject %> <span
                                                    class="badge badge-pill badge-danger">New!</span></a>
                                        <a href="/announcements/mark/<%= announcement._id %>" class="button-text"><span
                                                    class="badge badge-pill badge-success">Mark As Read</span></a>

                                    <% } else if (currentUser.annCount[index].version == "updated") { %>
                                        <a href="/announcements/<%= announcement._id %>"
                                           class="button-text"><%= announcement.subject %> <span
                                                    class="badge badge-pill badge-info">Updated!</span></a>
                                        <a href="/announcements/mark/<%= announcement._id %>" class="button-text"><span
                                                    class="badge badge-pill badge-success">Mark As Read</span></a>
                                    <% } %>

                                <% } else { %>
                                    <a href="/announcements/<%= announcement._id %>"
                                       class="button-text"><%= announcement.subject %></a>

                                <% } %>

                            <% } else { %>
                                <a href="/announcements/<%= announcement._id %>"
                                   class="button-text"><%= announcement.subject %></a>
                            <% } %>

                            <a class="float-right date"><%= announcement.date %></a>
                        </h5>

                        <% if (currentUser) { %>
                            <a class="button-text" href="../profiles/<%= announcement.sender._id %>">
                                <img src="<% if (announcement.sender.mediaFile.display) {%> <%= announcement.sender.mediaFile.url%><%} else {%> <%=announcement.sender.imageUrl.url%><%}%>" alt="profile pic" class="author-profile">
                                <%= announcement.sender.firstName %> <%= announcement.sender.lastName %>
                            </a>

                        <% } else { %>
                            <span class="button-text">
                      <img src="<% if (announcement.sender.mediaFile.display) {%> <%= announcement.sender.mediaFile.url%><%} else {%> <%=announcement.sender.imageUrl.url%><%}%>" alt="profile pic" class="author-profile">
                      <%= announcement.sender.firstName %> <%= announcement.sender.lastName %>
                    </span>
                        <% } %>

                        <% if (currentUser) { %>
                            <% if (currentUser._id.toString() == announcement.sender._id.toString()) { %>
                                <button class="edit-button" type="button" class="btn btn-info"><a class="button-text"
                                                                                                  href="announcements/<%= announcement._id %>/edit"><i
                                                class="fas fa-cog"></i> Edit</a></button>

                                <form action="announcements/<%= announcement._id %>?_method=delete" method="post"
                                      class="delete-form">
                                    <button class="button-text" class="btn btn-danger" type="button" data-toggle="modal"
                                            data-target="#modal-<%= announcement._id %>"><i
                                                class="far fa-trash-alt"></i> Delete
                                    </button>
                                    <div class="modal fade" id="modal-<%= announcement._id %>" tabindex="-1"
                                         aria-labelledby="deleteModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content mode">
                                                <div class="modal-header mode">
                                                    <h5 class="modal-title" id="exampleModalLabel">Delete
                                                        Announcement?</h5>
                                                    <button type="button" class="close mode" data-dismiss="modal"
                                                            aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body mode">
                                                    This action is irreversible. You will have to manually recreate this
                                                    announcement.
                                                </div>
                                                <div class="modal-footer mode">
                                                    <button type="button" class="btn btn-secondary"
                                                            data-dismiss="modal">No, Go
                                                        Back
                                                    </button>
                                                    <button type="submit" class="btn btn-danger">Yes, Delete
                                                        Announcement
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            <% } %>

                            <% if (announcement.likes.includes(currentUser._id)) { %>
                                <span class="liked-button"><i id="like-<%= announcement._id %>-index"
                                                              onclick="like(this)"
                                                              class="fas fa-thumbs-up"></i></span> <span
                                        class="likeCount-<%= announcement._id %>"><%= announcement.likes.length %></span>

                            <% } else { %>
                                <span class="unliked-button"><i id="like-<%= announcement._id %>-index"
                                                                onclick="like(this)"
                                                                class="fas fa-thumbs-up"></i></span> <span
                                        class="likeCount-<%= announcement._id %>"><%= announcement.likes.length %></span>

                            <% } %>
                            <a class="comment-button" href="/announcements/<%= announcement._id %>#comment-section"><i
                                        class="fas fa-comment-dots"></i> <%= announcement.comments.length %></a>

                        <% } %>

                    </div>
                    <div class="block-content">
                        <% if (announcement.text.split(" ").length > 30) { %>
                            <p class="announcement-text"><%= announcement.text.split(" ").slice(0, 31).join(" ") %> <a
                                        href="/announcements/<%= announcement._id %>">(Read More)</a></p>
                        <% } else { %>
                            <p class="announcement-text"><%= announcement.text %></p>
                        <% } %>

                    </div>
                </article>
            </div>
        </div>
        <br class="text-break" id="break-<%= announcement._id %>"/>

    <% }) %>
</div>
</body>
<script src="/javascript/announcements/like.js"></script>
<script>

    const searchFunction = (() => {
        const announcements = document.getElementsByClassName('text-block');
        const breaks = document.getElementsByClassName('text-break');
        const searchInput = document.getElementById('search-input');
        let filter = searchInput.value.toLowerCase();

        for (let i = 0; i < announcements.length; i += 1) {
            if (!announcements[i].innerText.replace("(Read More)", "").toLowerCase().includes(filter)) {
                $(`#${announcements[i].id}`).hide();
                $(`#${breaks[i].id}`).hide();

            } else {
                $(`#${announcements[i].id}`).show();
                $(`#${breaks[i].id}`).show();
            }
        }
    })

</script>
</html>
