<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport">
    <title>Saberchat</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/components/navbar.css">
    <link rel="stylesheet" href="/stylesheets/announcements/announcements.css">

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/@popperjs/core@2" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

    <script src="https://kit.fontawesome.com/dccc745c41.js" crossorigin="anonymous"></script>
  </head>
  <body id="body">
    <%- include('../partials/navbar') %>

    <form action="/sendAnnouncement" method="post">
      <input type="text" maxlength="30"placeholder="Enter announcement subject" id="new-announcement-message" name="subject"/>
      <br />
      <textarea placeholder="Enter announcement text here" id="new-announcement-text" name="message" cols=60 rows=10></textarea>
      <br />
      <button id="submit-announcement" type="submit">Send Announcement</button>
    </form>
</body>
<script>
  //preserve formatting
  $('#do_it').click( () => {
    $('#results').html($('textarea').val().replace(/\n/g, '<br>'));
    });

    //truncate result if <br>
    $('#preview').click(function() {
    var thesplit = $('#results').html().split('<br>');
    $('#results').empty().html(thesplit[0] + ' ... ');
    console.log(thesplit)
  });

</script>
</html>
