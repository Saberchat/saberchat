<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport">
    <title>Saberchat</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css">

    <link rel="stylesheet" href="/stylesheets/components/announcement.css">
    <link rel="stylesheet" href="/stylesheets/components/header.css">
    <link rel="stylesheet" href="/stylesheets/components/navbar.css">
    <link rel="stylesheet" href="/stylesheets/announcements/announcements.css">

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/@popperjs/core@2" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

    <script src="https://kit.fontawesome.com/dccc745c41.js" crossorigin="anonymous"></script>
  </head>
  <body id="body">

    <%- include('../partials/navbar') %>
    <%- include('../partials/header') %>
    <%- include('../partials/announcement') %>

    <div class="container mt-5">
      <div class="row">
        <div class="col-12">
          <div class="jumbotron text-center">
            <h1><i class="fas fa-bullhorn"></i> Send Announcement</h1>
            <p>For teachers to send important messages to students, staff and parents</p>
          </div>
        </div>
      </div>
    </div>
    <form action="/sendAnnouncement" method="post">
      <div class="input-group mb-3">
        <input id="new-announcement-message" name="subject" maxlength="50" style="margin-left: 300px; margin-right: 300px;"type="text" class="form-control" placeholder="Announcement Subject" aria-label="Username" aria-describedby="basic-addon1">
      </div>
      <div class="input-group mb-3">
        <input id="new-announcement-message" name="imgUrls" style="margin-left: 300px; margin-right: 300px;"type="text" class="form-control" placeholder="Any Image Urls" aria-label="Username" aria-describedby="basic-addon1">
      </div>
      <div class="input-group">
        <textarea name="message" placeholder="Announcement Message" style="margin-left: 300px; margin-right: 300px; height: 200px" class="form-control" aria-label="With textarea" ></textarea>
      </div>
      <br />
      <button id="submit-announcement" class="btn btn-primary" type="submit">Send Announcement</button>
    </form>
</body>
<script>
  //preserve formatting
  $('#do_it').click( () => {
    $('#results').html($('textarea').val().replace(/\n/g, '<br>'));
    });

    //truncate result if <br>
    $('#preview').click(function() {
    var thesplit = $('#results').html().split('<br>');
    $('#results').empty().html(thesplit[0] + ' ... ');
    console.log(thesplit)
  });

</script>
</html>
