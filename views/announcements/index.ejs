<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Saberchat</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/components/header.css">
    <link rel="stylesheet" href="/stylesheets/components/navbar.css">
    <link rel="stylesheet" href="/stylesheets/announcements/index.css">
    <link rel="stylesheet" href="/stylesheets/home/index.css">
    <link rel="stylesheet" href="/stylesheets/chat/new.css">
    <%if (currentUser) {%>
      <%if (currentUser.darkmode) { %>
        <link rel="stylesheet" href="/stylesheets/Darkmode.css">
      <%}%>
    <%}%>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/@popperjs/core@2" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

    <script src="https://kit.fontawesome.com/dccc745c41.js" crossorigin="anonymous"></script>
    <script src="/javascript/nav/userForm.js"></script>
    <script src="/javascript/nav/navbar.js"></script>
    <script src="/javascript/home/index.js"></script>
    <script src="/javascript/announcements/search.js"></script>
    <script src="/javascript/announcements/like.js"></script>

    <%- include('../partials/navbar') %>
    <%- include('../partials/header') %>

  </head>
  <body class = "mode">
    <div class="container mt-5 mode">
      <div class="row">
        <div class="col-12">
          <div class="jumbotron text-center header">
            <h1><i class="fas fa-bullhorn"></i> Announcements</h1>
            <p>The latest news from staff</p>
            <% if (currentUser) { %>
              <% if (["admin", "principal"].includes(currentUser.permission) || currentUser.status == "faculty") { %>
                <a href="/announcements/new" class="btn btn-primary announcement-button"><i class="fas fa-bullhorn"></i> Send Announcement</a>
              <% } %>
              <a href="/announcements/mark-all" class="btn btn-success announcement-button"><i class="fas fa-check-square"></i> Mark All As Read</a>
            <% } %>
          </div>
        </div>
      </div>

      <div class="search-filter mb-3 search">
        <i class="fas fa-search"></i>
        <input id="search-input" oninput="searchFunction()" class="form-control search" type="text" placeholder="Search..." title="Type in announcement segment"/>
      </div><br />

        <% announcements.forEach(announcement => { %>

          <div class="row">
            <div class="col-lg-12">
              <article class="text-block color: black" id="<%=announcement._id%>">
                <div class="block-header grey">
                  <h5>

                  <a class="announcement-button" href="/announcements/<%=announcement._id%>">
                    <span class="announcement-subject-header"><%=announcement.subject%></span>

                    <% if (currentUser) { %>
                      <% let index = -1 %>
                      <% for (let i = 0; i < currentUser.annCount.length; i += 1) { %>
                        <% if (currentUser.annCount[i].announcement.toString() == announcement._id.toString()) { %>
                          <% index = i; %>
                        <% } %>
                      <% } %>

                        <% if (index != -1) { %>
                          <% if (currentUser.annCount[index].version == "new") { %>
                            <span class="badge badge-pill badge-danger announcement-button">New!</span>
                          <% } else if (currentUser.annCount[index].version == "updated") { %>
                            <span class="badge badge-pill badge-info announcement-button">Updated!</span>
                          <% } %>
                        <% } %>

                      <% if (index != -1) { %>
                        <a href="/announcements/mark/<%=announcement._id%>"><span class="badge badge-pill badge-success announcement-button">Mark As Read</span></a>
                      <% } %>
                    <% } %>
                  </a>
                    <span class="float-right announcement-date"><%=announcement.date%></span>
                  </h5>

                  <div class="bottom-text">
                    <% if (currentUser) { %>
                      <a class="announcement-sender" href= "../profiles/<%=announcement.sender._id%>" >
                        <img src="<%= announcement.sender.imageUrl %>" alt="profile pic" class="sender-profile-image">
                        <%=announcement.sender.firstName%> <%=announcement.sender.lastName%>
                      </a>

                    <% } else {%>
                      <span class="announcement-sender">
                        <img src="<%= announcement.sender.imageUrl %>" alt="profile pic" class="sender-profile-image">
                        <%=announcement.sender.firstName%> <%=announcement.sender.lastName%>
                      </span>
                    <% } %>

                    <% if (currentUser) { %>
                      <% if (currentUser._id.toString() == announcement.sender._id.toString()) { %>
                        <button type="button" class="edit-button btn btn-info"><a class="announcement-button" href="/announcements/<%=announcement._id%>/edit"><i class="fas fa-cog"></i> Edit</a></button>

                        <form action="/announcements/<%=announcement._id%>?_method=delete" method="post" class="delete-announcement">
                          <button class="btn btn-danger announcement-button" type="button" data-toggle="modal" data-target="#modal-<%=announcement._id%>"><i class="far fa-trash-alt"></i> Delete</button>
                          <div class="modal fade" id="modal-<%=announcement._id%>" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h5 class="modal-title" id="exampleModalLabel">Delete Announcement?</h5>
                                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                  </button>
                                </div>
                                <div class="modal-body">
                                  This action is irreversible. You will have to manually recreate this announcement.
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary" data-dismiss="modal">No, Go Back</button>
                                  <button type="submit" class="btn btn-danger">Yes, Delete Announcement</button>
                                </div>
                              </div>
                            </div>
                          </div>
                        </form>
                      <% } %>

                      <% if (announcement.likes.includes(currentUser._id)) { %>
                        <span class="liked-button"><i id="like-<%=announcement._id%>-index" onclick="like(this)" class="fas fa-thumbs-up"></i></span> <span class="likeCount-<%=announcement._id%>"><%=announcement.likes.length%></span>

                      <% } else { %>
                        <span class="unliked-button"><i id="like-<%=announcement._id%>-index" onclick="like(this)" class="fas fa-thumbs-up"></i></span> <span class="likeCount-<%=announcement._id%>"><%=announcement.likes.length%></span>

                      <% }%>
                      <a class="comment-button" href="/announcements/<%=announcement._id%>#comment-section"><i class="fas fa-comment-dots"></i> <%=announcement.comments.length%></a>

                    <% } %>
                  </div>
                </div>

                <div class="block-content mode">
                  <% if (announcement.text.split(" ").length > 30) { %>
                    <p class="announcement-text"><%=announcement.text.split(" ").slice(0,31).join(" ")%> <a href="/announcements/<%=announcement._id%>">(Read More)</a></p>
                  <% } else { %>
                    <p class="announcement-text"><%=announcement.text%></p>
                  <% } %>

                </div>
              </article>
            </div>
          </div>
          <br class="text-break" id="break-<%=announcement._id%>"/>

        <% }) %>
      </div>
    </body>
</html>
