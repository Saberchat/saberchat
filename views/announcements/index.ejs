<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Saberchat</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/components/header.css">
    <link rel="stylesheet" href="/stylesheets/components/navbar.css">
    <link rel="stylesheet" href="/stylesheets/announcements/index.css">
    <link rel="stylesheet" href="/stylesheets/home/index.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/@popperjs/core@2" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

    <script src="https://kit.fontawesome.com/dccc745c41.js" crossorigin="anonymous"></script>
    <%- include('../partials/navbar') %>
    <%- include('../partials/header') %>

  </head>
  <body>
    <div class="container my-5">
      <div class="row">
        <div class="col-12">
          <div class="jumbotron text-center">
            <h1><i class="fas fa-bullhorn"></i> Announcements</h1>
            <p>The latest news from staff</p>
            <% if (currentUser.permission == "admin") { %>
              <a href="/announcements/new" class="btn btn-primary" style="color: white;"><i class="fas fa-bullhorn"></i> Send Announcement</a>
            <% } %>
          </div>
        </div>
      </div>

      <% if (announcements.length <= 5) { %>
        <% announcements.forEach(announcement => { %>


        <div class="row" style="margin-bottom: 5rem;">
            <div class="col-lg-12">
                <article class="text-block">
                    <div class="block-header green">
                        <h1><a href="/announcements/<%=announcement._id%>" style="color:white;"><%=announcement.subject%></a></h1>

                          <h5>Posted by <a href= "../profiles/<%=announcement.sender._id%>" style="color:white;"><%=announcement.sender.username%></a></h5>
                          <p><%=announcement.date%></p>

                    </div>
                    <div class="block-content">
                      <% if (announcement.text.split(" ").length > 70) { %>
                        <p><%=announcement.text.split(" ").slice(0,71).join(" ")%> <a href="/announcements/<%=announcement._id%>">(Read More)</a></p>
                      <% } else { %>
                        <p><%=announcement.text%></p>
                      <% } %>

                    </div>
                </article>
            </div>
            <div class="col-lg-6 block">

            </div>
        </div>
        <% }) %>

      <% } else { %>
        <% announcements.slice(0,5).forEach(announcement => { %>


        <div class="row" style="margin-bottom: 5rem;">
            <div class="col-lg-12">
                <article class="text-block">
                    <div class="block-header green">
                        <h1><a href="/announcements/<%=announcement._id%>" style="color:white;"><%=announcement.subject%></a></h1>

                          <h5>Posted by <a href= "../profiles/<%=announcement.sender._id%>" style="color:white;"><%=announcement.sender.username%></a></h5>

                    </div>
                    <div class="block-content">
                      <% if (announcement.text.split(" ").length > 70) { %>
                        <p><%=announcement.text.split(" ").slice(0,71).join(" ")%> <a href="/announcements/<%=announcement._id%>">(Read More)</a></p>
                      <% } else { %>
                        <p><%=announcement.text%></p>
                      <% } %>


                    </div>
                </article>
            </div>
            <div class="col-lg-6 block">

            </div>
        </div>
        <% }) %>
      <% } %>


  </div>
</html>
