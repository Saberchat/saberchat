<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Saberchat</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/components/header.css">
    <link rel="stylesheet" href="/stylesheets/components/navbar.css">
    <link rel="stylesheet" href="/stylesheets/components/announcement.css">
    <link rel="stylesheet" href="/stylesheets/announcements/announcements.css">

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/@popperjs/core@2" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

    <script src="https://kit.fontawesome.com/dccc745c41.js" crossorigin="anonymous"></script>
    <%- include('../partials/navbar') %>
    <%- include('../partials/header') %>

  </head>
  <body>
    <div class="container mt-5">
      <div class="row">
        <div class="col-12">
          <div class="jumbotron text-center">
            <h1><i class="fas fa-sign-in-alt"></i> Announcements</h1>
            <p>The latest news from staff.</p>
          </div>
        </div>
      </div>
    </div>

    <% if (announced) { %>
      <% if (announcement.sender.username == currentUser.username) { %>
        <div class="button-set">
        <form action="/announcements/destroy/<%=announcement._id%>?_method=delete" method="post" style="display: inline-block;">
          <button type="submit" id="delete-ann-button" class="btn btn-danger">Delete Announcement</a></button>
        </form>
        <button type="button" id="edit-ann-button" class="btn btn-success" style="margin-right: 15px;"><a href="/announcements/edit/<%=announcement._id%>" style="color: white;">Edit Announcement</a></button>
        <button type="button" id="send-ann-button" class="btn btn-primary"><a href="/announcements/new" style="color: white;">Send Announcement</a></button>
        </div>
      <% } %>

      <div class="container mt-5" style="display: flex; justify-content: center;">
        <div class="row">
          <div class="col-12">
            <div class="jumbotron text-center" style="padding: 50px;">
              <h1><%=announcement.subject%></h1>
              <p><em>Posted by <a style="color: black;" href="/profiles/<%=announcement.sender._id%>"><strong><%=announcement.sender.username%></strong></a></em></p>
              <p style="font-size: 20%; margin-top: 5px;"><%=announcement.date.split(', ')[1]%> | <%=announcement.date.split(', ')[0]%></p>

              <p style="margin-top: 10px; white-space: pre-wrap; text-align: left;"><%=announcement.text%></p>

              <% if (announcement.images.length > 0) { %>
                <%announcement.images.forEach(image => {%>
                  <img style="margin-bottom: 30px; width: 100%; height: 100%; object-fit: contain;" src="<%=image%>"/>
                  <br />

                <%})%>

              <% } %>
            </div>
          </div>
        </div>
      </div>
    <%}%>
</body>
</html>
