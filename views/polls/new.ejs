<%- include('../partials/headStart') %>
<link rel="stylesheet" href="/stylesheets/polls/new.css">
<%- include('../partials/headEnd') %>
<body>
    <%- include('../partials/components/navbar') %>
    <%- include('../partials/components/header') %>
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-8 offset-lg-2 my-5">
                <!-- jumbotron was deprecated in v5. Custom jumbo. -->
                <div class="bg-light text-center rounded-5">
                    <div class="container-fluid py-5">
                        <h1 class="display-5 fw-bold">New <%= data.name %></h1>
                        <a href="/polls" class="btn btn-secondary">Back</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-lg-8 offset-lg-2">
                <form action="/polls" method="post" class="mb-5">
                    <div class="form-group">
                        <label class="form-label" for="formTitle">Title</label>
                        <input 
                            class="form-control" id="formTitle" name="formTitle" 
                            type="text" placeholder="The form's display name..." required maxlength="80">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="googleFormUrl">Google Forms Share Url/Link</label>
                        <a href="/polls/new/instructions" class="d-block" target="_blank" rel="noopener noreferrer">Where do I find this?</a>
                        <input 
                            class="form-control" id="googleFormUrl" name="googleFormUrl" 
                            type="text" required 
                            placeholder="Ex. https://docs.google.com/forms/d/e/.../viewform?usp=sf_link">
                        <p class="my-2 text-muted">The Google Form's non-shortened share link</p>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="formWidth">Form Width (px) [optional]</label>
                        <input 
                            class="form-control" id="formWidth" name="formWidth" type="number" 
                            placeholder="480" min="250">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="formHeight">Form Height (px) [optional]</label>
                        <input 
                            class="form-control" id="formHeight" name="formHeight" type="number" 
                            placeholder="640" min="300">
                    </div>
                    <button class="btn btn-success" type="submit">Create</button>
                </form>
                <hr>
                <h4>Preview</h4>
                <div class="preview-container">
                    <iframe 
                        src="" width="480" height="480" id="formRenderer"
                        frameborder="0" marginwidth="0" marginheight="0" scrolling="auto"
                        >Loading...</iframe>

                </div>
                
            </div>
        </div>
    </div>
    <script src="/javascript/polls/new.js"></script>
</body>
</html>