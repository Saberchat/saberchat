<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Saberchat</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <!-- link css for navbar. Don't need to include public/javascript/userForm.js since user is already logged in and does not need to access login and register forms.  -->
    <link rel="stylesheet" href="/stylesheets/components/navbar.css">
    <link rel="stylesheet" href="/stylesheets/components/header.css">
    <link rel="stylesheet" href="/stylesheets/components/announcement.css">
    <link rel="stylesheet" href="/stylesheets/inbox/inbox.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src="../javascript/socket.js"></script>

    <!-- I'm using my fontawesome kit -->
    <script src="https://kit.fontawesome.com/dccc745c41.js" crossorigin="anonymous"></script>

    <!-- include the navbar via ejs -->
    <%- include('../partials/navbar') %>
    <!-- include the backdrop for nav -->
    <%- include('../partials/header') %>
    <%- include('../partials/announcement') %>

    </head>
    <body>
    <div class="container">
      <div class="row">
        <div class="col-md-10 offset-md-1 col-12">
          <form action="/delete" method="post">
            <div class="container mt-5">
              <div class="row">
                <div class="col-12">
                  <div class="jumbotron text-center">
                    <h1><i class="fas fa-inbox"></i> <%=username.charAt(0).toUpperCase() + username.slice(1)%>'s Inbox</h1>
                    <p><strong>New Notifications:</strong> <%=notifs.length%></p>
                  </div>
                </div>
              </div>
            </div>
            <div class="heading" style="text-align: center;">
              <button style="margin-bottom: 30px; margin-right: 15px; " type="button" class="btn btn-danger" class="delete-button"><a id="notifButton" href="/clear"><i class="fas fa-trash-alt"></i> Clear All</a></button>
              <button style="margin-bottom: 30px; margin-right: 15px;" type="delete" class="btn btn-danger" class="delete-button"><i class="fas fa-trash-alt"></i> Clear Selected</button>
              <button style="margin-bottom: 30px; margin-right: 15px;" type="button" class="btn btn-primary" class="delete-button"><a id="notifButton" href="/notif"><i class="far fa-comment-dots"></i> Send</a></button>
              <button style=" margin-bottom: 30px;" type="button" style="margin-top: 10px;" class="btn btn-success" class="delete-button"><a id="notifButton" href="/view_sent_notifs"><i class="far fa-comment-dots"></i> View Sent</a></button>
            </div>
              <div class="search-filter">
              </div>
              <ul class = "new_messages" id="new_messages">
                <% [...Array(notifs.length).keys()].forEach(i => { %>
                  <div class="notification">

                    <!-- Anonymous messages -->
                    <% if (notifs[i].sender == null){ %>

                        <input name=<%=notifs[i]['_id']%> type="checkbox" />
                        <label for=<%=notifs[i]['_id']%>> <a style="color: inherit;" href="/view_inbox_message/<%=notifs[i]._id%>"><span class="msg-info"><strong><%=notifs[i].subject%> </strong><span style="font-size: 10px;"><%=notifdates[i].split(", ")[1]%> | <%=notifdates[i].split(", ")[0]%></span></span></a></label>
                      <br />

                      <% if (notifs[i].text.split(' ').length > 20) { %>
                        <span class="message"><%=notifs[i].text.split(' ').slice(0, 21).join(' ')%> <a style="color: inherit;" href="/view_inbox_message/<%=notifs[i]._id%>">(Read More)</a></span>
                      <% } else { %>
                        <span class="message"><%=notifs[i].text%></span>
                      <% } %>

                    <!-- Known-sender message -->

                    <% } else {%>
                      <img class="profile-img" src="<%=notifs[i].sender.imageUrl%>"/>

                        <input name=<%=notifs[i]['_id']%> type="checkbox"/>
                        <label for=<%=notifs[i]['_id']%>><a style="color: inherit;" href="/view_inbox_message/<%=notifs[i]._id%>"> <span><strong> <%=notifs[i].sender.username%></strong></span>:<span class="msg-info"><strong><%=notifs[i].subject%></strong> <span style="font-size: 10px;"><%=notifdates[i].split(", ")[1]%> | <%=notifdates[i].split(", ")[0]%></span></span> </a> </label>
                      <br />

                      <% if (notifs[i].text.split(' ').length > 20) { %>
                        <span class="message"><%=notifs[i].text.split(' ').slice(0, 21).join(' ')%> <a style="color: inherit;" href="/view_inbox_message/<%=notifs[i]._id%>">(Read More)</a></span>
                      <% } else { %>
                        <span class="message"><%=notifs[i].text%></span>
                      <% } %>

                    <% } %>
                  </div>
                <% }) %>
              </ul>
          </form>
      </div>
    </div>
  </body>
</html>
