                <% let statusMatrix = [["Faculty", "Faculty", []], ["12th", "Seniors", []], ["11th", "Juniors", []], ["10th", "Sophomores", []], ["9th", "Freshmen", []], ["8th", "8th Graders", []], ["7th", "7th Graders", []], ["Alumnus", "Alumni", []], ["Parent", "Parents", []], ["Guest", "Guests", []]] %>
                <% let permMatrix = [["principal", "Principal"], ["admin", "Administrator"], ["mod", "Moderator"], ["default", "Default"]]; %>
                <% let permMap = new Map(permMatrix); %>
                <% let tagMap = new Map([["Tutor", "warning"], ["Cashier", "success"], ["Editor", "info"]]); %>

                <% for (let status of statusMatrix) { %>
                    <% for (let user of users) { %>
                        <% if(!user._id.equals(currentUser._id) && user.status.toLowerCase() == status[0].toLowerCase()){ %>
                            <% for (let perm of permMatrix) { %>
                              <% if (perm[0].toLowerCase() == user.permission.toLowerCase())  { %>
                                <li class="list-group-item user <%=status[0].toLowerCase()%> <%=status[1].toLowerCase()%> <%=perm[0]%> <%=user.tags.join(' ')%> cafe" id="user-<%=user._id%>">
                                  <%= user.username %> (<%= user.firstName %> <%= user.lastName %>)
                              <% } %>
                            <% } %>
                          <select name="status" class="role-select mode" onchange="updateStatus(this)" id="<%= user._id %>">

                            <% for (let status of statusMatrix) { %>
                              <% if (user.status.toLowerCase() == status[0].toLowerCase()) { %>
                                <option value="<%=status[0].toLowerCase()%>" selected><%=status[0]%></option>

                              <% } else { %>
                                <option value="<%=status[0].toLowerCase()%>"><%=status[0]%></option>
                              <% }%>
                            <% } %>
                          </select>
                          <select name="tag" class="role-select mode" onchange="updateTag(this)" id="<%= user._id %>">
                            <option value=""></option>

                            <% for (let tag of tags) { %>

                              <% if (currentUser.tags.includes(tag)) { %>
                                <option value="<%=tag%>"><%=tag%></option>
                              <% } else { %>
                                <option value="<%=tag%>"><%=tag%></option>
                              <% }%>

                            <% } %>
                          </select>

                          <span class="badge badge-secondary user-permission%>"><%=permMap.get(user.permission)%></span>

                          <% for (let tag of user.tags) { %>
                            <span class="badge badge-pill badge-<%=tagMap.get(tag)%> tag-<%=user._id%> user-tag"><%=tag%></span>
                          <% } %>
                        </li>
                      <% } %>
                  <% }; %>
                <% } %>

            </ul>
