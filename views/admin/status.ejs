<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Saberchat</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/components/navbar.css">
    <link rel="stylesheet" href="/stylesheets/components/header.css">
    <link rel="stylesheet" href="/stylesheets/admin/permission.css">
    <link rel="stylesheet" href="/stylesheets/chat/new.css">

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/@popperjs/core@2" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

    <script src="https://kit.fontawesome.com/dccc745c41.js" crossorigin="anonymous"></script>
</head>
<body>
    <%- include('../partials/navbar') %>
    <%- include('../partials/header') %>

    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <h1>Change Statuses</h1>
                <span id="loading"></span>
                <hr>

                <div class="search-filter mb-3">
                  <i class="fas fa-search"></i>
                  <input id="search-input" oninput="searchFunction()" class="form-control" type="text" placeholder="Search..." title="Type in name"/>
                </div><br />

                <ul class="list-group">

                  <li class="list-group-item">
                    <strong>Modify Statuses</strong>
                  </li>

                  <% let statusMatrix = [ ["Faculty", "Faculty", []], ["12th", "Seniors", []], ["11th", "Juniors", []], ["10th", "Sophomores", []], ["9th", "Freshmen", []], ["8th", "8th Graders", []], ["7th", "7th Graders", []], ["Alumnus", "Alumni", []], ["Parent", "Parents", []], ["Guest", "Guests", []] ] %>
                  <% let permMatrix = [["principal", "Principal"], ["admin", "Administrator"], ["mod", "Moderator"], ["student", "Student"]]; %>

                  <% for (let status of statusMatrix) { %>
                    <% for (let user of users) { %>
                      <% if(!user._id.equals(currentUser._id) && user.status.toLowerCase() == status[0].toLowerCase()){ %>
                        <li class="list-group-item user" id="<%=user._id%>">
                          <%= user.username %> (<%= user.firstName %> <%= user.lastName %>) <span hidden><%=status[0]%> <%=status[1]%>
                            <% for (let perm of permMatrix) { %>
                              <% if (perm[0].toLowerCase() == user.permission.toLowerCase())  { %>
                                <%=perm[0]%> <%=perm[1]%> data_end
                              <% } %>
                            <% } %>
                          </span>
                          <select name="status" class="role-select" onchange="updateStatus(this)" id="<%= user._id %>">

                            <% for (let status of statusMatrix) { %>
                              <% if (user.status.toLowerCase() == status[0].toLowerCase()) { %>
                                <option value="<%=status[0].toLowerCase()%>" selected><%=status[0]%></option>

                              <% } else { %>
                                <option value="<%=status[0].toLowerCase()%>"><%=status[0]%></option>
                              <% }%>
                            <% } %>
                          </select>
                        </li>
                      <% } %>
                  <% }; %>
                <% } %>

                </ul><br />
            </div>
        </div>
    </div>
    <script src="/javascript/admin/status.js"></script>
    <script>

      const searchFunction = (() => {
        const users = document.getElementsByClassName('user');
        const searchInput = document.getElementById('search-input');
        let filter = searchInput.value.toLowerCase();

        for (let i = 0; i < users.length; i += 1) {
          if (!users[i].textContent.split('data_end')[0].toLowerCase().includes(filter)) {
            $(`#${users[i].id}`).hide();

          } else {
            $(`#${users[i].id}`).show();
          }
        }
      })

    </script>
</body>
</html>
