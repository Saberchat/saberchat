<!DOCTYPE html>
  <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Saberchat</title>

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/main.css">
        <link rel="stylesheet" href="/stylesheets/components/navbar.css">
        <link rel="stylesheet" href="/stylesheets/components/header.css">
        <link rel="stylesheet" href="/stylesheets/chat/new.css">
        <link rel="stylesheet" href="/stylesheets/admin/permission.css">
        <%if (currentUser) {%>
          <%if (currentUser.darkmode) { %>
            <link rel="stylesheet" href="/stylesheets/darkmode.css">
          <%}%>
        <%}%>

        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script src="https://unpkg.com/@popperjs/core@2" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

        <script src="https://kit.fontawesome.com/dccc745c41.js" crossorigin="anonymous"></script>
        <%- include('../partials/analytics') %>
    </head>
    <body class="mode">
        <!-- include the navbar via ejs -->
        <%- include('../partials/navbar') %>
        <!-- include the backdrop for nav -->
        <%- include('../partials/header') %>

        <div class="container mt-5">
          <div class="row">
            <div class="col-12">
              <h1>Change Balances</h1>
              <span id="loading"></span>
              <hr>

              <div class="search-filter mb-3 search">
                <i class="fas fa-search"></i>
                <input id="search-input" oninput="searchFunction(this, 'user')" class="form-control search" type="text" placeholder="Search..." title="Type in name"/>
              </div><br />

            <ul class="list-group">

                <li class="list-group-item mode darkmode-outline">
                  <span id="modify-header">Modify Balances</span>
                </li>

                <% for (let user of users) { %>
                    <% if(!user._id.equals(currentUser._id)){ %>
                      <form onsubmit="updateBalance(this, event)" id="<%=user._id%>">
                        <li class="list-group-item user cafe">
                          <div class="col">
                            <span class="user-balance-info"><%= user.firstName %> <%= user.lastName %> (<%= user.username %>)</span>
                            <div class="input-group balance-input">
                                <div class="input-group-prepend">
                                    <div class="input-group-text mode">$</div>
                                </div><input class="form-control mode" type="text" id="balance-<%=user._id%>" placeholder="price" maxlength="10" required value="<% if (user.balance == 0) { %>0.00<% } else {%><%= `${(user.balance * 100).toString().slice(0, (user.balance * 100).toString().length - 2)}.${(user.balance * 100).toString().slice((user.balance * 100).toString().length - 2)}`%><% } %>">
                              </div>
                          </div>
                        </li>
                      </form>
                    <% } %>

                <% } %>

            </ul>
            <br/>
        </div>
    </div>
</div>
</body>
<script src="/javascript/admin/permission.js"></script>
<script src="/javascript/admin/search.js"></script>
<script>
  if (document.getElementById("search-input")) {
      document.getElementById("search-input").style.backgroundColor = colorScheme[colorScheme.length-1];
  }
  
  for (let element of document.getElementsByClassName("list-group-item")) {
        element.style.backgroundColor = colorScheme[1];
  }
</script>
</html>
