<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Saberchat</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/components/navbar.css">
    <link rel="stylesheet" href="/stylesheets/admin/mod.css">

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/@popperjs/core@2" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

    <script src="https://kit.fontawesome.com/dccc745c41.js" crossorigin="anonymous"></script>
</head>
<body>
    <%- include('../partials/navbar') %> 
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <h1>Moderator Page</h1>
                <hr>
                <h4>Reported Comments</h4>
                <hr>
                <ul class="list-group mt-3">
                    <% comments.forEach(comment => { %>
                        <li class="list-group-item">
                            <h4>Room: <%= comment.room.name %></h4>
                            <p>Reported by <b><%= comment.statusBy.username %></b></p>
                            <span><b><%= comment.author.username %>:</b> <%= comment.text %></span>
                            <div class="btn-group mod-actions">
                                <button 
                                id="<%= comment._id %>" 
                                class="btn btn-success" 
                                type="button"
                                onclick="ignoreComment(this)"
                                >Ignore Report</button>

                                <a id="<%= comment._id %>" class="btn btn-primary text-light" type="button">Get Context</a>

                                <button 
                                id="<%= comment._id %>" 
                                class="btn btn-danger" 
                                type="button"
                                onclick="deleteComment(this)"
                                >Delete Comment</button>
                            </div>
                        </li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
    <script src="/javascript/admin/mod.js"></script>
</body>
</html>