    <body class="mode">
        <!-- include the navbar via ejs -->
        <%- include('../partials/navbar') %>
        <!-- include the backdrop for nav -->
        <%- include('../partials/header') %>

        <div class="container mt-5">
          <div class="row">
            <div class="col-12">
              <h1>Change Permissions</h1>
              <span id="loading"></span>
              <hr>

              <div class="search-filter mb-3 search">
                <i class="fas fa-search"></i>
                <input id="search-input" oninput="searchFunction()" class="form-control search" type="text" placeholder="Search..." title="Type in name"/>
              </div><br />

            <ul class="list-group">

                <li class="list-group-item mode darkmode-outline">
                  <span id="modify-header">Modify Permissions</span>
                  <!-- <form action="/admin/add-permission" method="post" id="add-email-form">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal" id="delete-button"><i class="fas fa-user"></i> Add Permission</button>
                    <div class="modal fade" id="modal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
