<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Saberchat</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/components/header.css">
    <link rel="stylesheet" href="/stylesheets/components/navbar.css">
    <link rel="stylesheet" href="/stylesheets/admin/permission.css">
    <link rel="stylesheet" href="/stylesheets/cafe/menu.css">

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/@popperjs/core@2" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

    <script src="https://kit.fontawesome.com/dccc745c41.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <%- include('../partials/navbar') %>
    <%- include('../partials/header') %>

    <div class="container mt-5">
      <div class="row">
        <div class="col-12">
          <div class="jumbotron text-center">
            <h1><i class="fas fa-bars"></i> No Left Turn Cafe Menu </h1>
            <p>All of our products, with photos and descriptions</p>
            <a class="btn btn-danger" href='/cafe'><i class="fas fa-arrow-left"></i> Back to Cafe</a>
            <a class="btn btn-info" href='/cafe/order/new'><i class="fas fa-plus-circle"></i> Order</a>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <% types.forEach(type => { %>
            <% if (type.items.length > 0) { %>
              <br />
              <li class="list-group-item list-group-item-success">
                <div class="d-flex w-100 justify-content-between">
                  <h2 class="mb-1"><%=type.name%></h2>
                </div>
              </li>

              <% type.items.forEach(item => { %>
                <% if (item.isAvailable == true) { %>

                  <% if (!item.price.toString().includes('.')) { %>
                    <span class="list-group-item list-group-item-action"><strong><%= item.name %> (<%= item.availableItems%> orders available)</strong> - $<%=item.price%>.00<br /> <em><%= item.description %></em><br /><br /><img  src=<%=item.imgUrl%> style="width: 20%; height: 20%; border-radius: 20px;"/></span>

                  <% } else if (item.price.toString().split('.')[1].length == 1){ %>
                    <span class="list-group-item list-group-item-action"><strong><%= item.name %> (<%= item.availableItems%> orders available)</strong> - $<%=item.price%>0<br /> <em><%= item.description %></em><br /><br /><img  src=<%=item.imgUrl%> style="width: 20%; height: 20%; border-radius: 20px;"/></span>

                  <% } else { %>
                    <span class="list-group-item list-group-item-action"><strong><%= item.name %> (<%= item.availableItems%> orders available)</strong> - $<%=item.price%><br /> <em><%= item.description %></em><br /><br /><img  src=<%=item.imgUrl%> style="width: 20%; height: 20%; border-radius: 20px;"/></span>
                  <% } %>

                <% }%>
              <% }) %>
            <% } %>

          <% }) %>
          <br />
        </div>
      </div>
    </div>
  </body>
</html>
