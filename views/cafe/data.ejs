<!DOCTYPE html>
<html>
  <head>
      <title>Saberchat</title>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">

      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
      <link rel="stylesheet" href="/stylesheets/main.css">
      <!-- link css for navbar. Don't need to include public/javascript/userForm.js since user is already logged in and does not need to access login and register forms.  -->
      <link rel="stylesheet" href="/stylesheets/components/header.css">
      <link rel="stylesheet" href="/stylesheets/components/navbar.css">
      <link rel="stylesheet" href="/stylesheets/chat/new.css">

      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

      <!-- I'm using my fontawesome kit -->
      <script src="https://kit.fontawesome.com/dccc745c41.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <!-- include the navbar via ejs -->
    <%- include('../partials/navbar') %>
    <%- include('../partials/header') %>

    <div class="container mt-5">
      <div class="row">
        <div class="col-12" style="text-align: center;">
          <h1 style="text-align: center; width: 100%">Cafe Data Analytics</h1>
          <a class="btn btn-primary" href="/cafe/manage"><i class="fas fa-arrow-left"></i> Back</a><br /><br />
        </div>
      </div>

        <h3>Most Frequent Customers</h3>

        <ol>

        <% for (let customer of popularCustomers) { %>
          <li>
            <%=customer.customer.firstName%> <%=customer.customer.lastName%>: <%=customer.orderCount%> orders
          </li>
        <% } %>

        </ol>

        <h3>Most Lucrative Customers</h3>

        <ol>

        <% for (let customer of lucrativeCustomers) { %>
          <li>
            <%=customer.customer.firstName%> <%=customer.customer.lastName%>: $<%=customer.spent%> spent (Avg. $<%=customer.avgCharge%> per order)
          </li>
        <% } %>

        </ol>

        <h3>Customers With Largest Orders</h3>

        <ol>

        <% for (let customer of longestOrderCustomers) { %>
          <li>
            <%=customer.customer.firstName%> <%=customer.customer.lastName%> (Avg. <%=customer.orderLength%> items per order)
          </li>
        <% } %>

        </ol>

        <h3>Most Popular Items</h3>

        <ol>

        <% for (let item of popularItems) { %>
          <li>
            <%=item.item.name%>: <%=item.orderCount%> orders
          </li>
        <% } %>

        </ol>

        <h3>Average Amount Ordered Per Item</h3>

        <ol>
        <% let numOrders;%>
        <% let sumOrders;%>

        <% for (let obj of orderedQuantities) { %>
          <li>
            <%=obj.item.name%>: <%=obj.avgQuantity%>
          </li>
        <% } %>

      </ol>

      <h3>Common Order Combinations</h3>

      <ol>
        <% let nameArr; %>
        <%for (let combo of combinations) { %>

          <% nameArr = []%>
          <% for (let item of combo.combination) { %>
            <% nameArr.push(item.name)%>
          <%}%>

          <li>The combination of <strong>{<span><%=nameArr.join(', ')%></span>}</strong> has been ordered <%=combo.instances%> times.</li>
        <% } %>
      </ol>

      <h3>Common Ordering Timeframes</h3>

      <%let averageHours = 0;%>
      <%let averageMinutes = 0;%>

      <ul>
        <% for (let time of times) { %>
          <% averageHours += parseInt(time.split(':')[0]) %>
          <% averageMinutes += parseInt(time.split(':')[1]) %>
          <li>
            <%=time%>
          </li>
        <% } %>
      </ul>

      <% averageHours /= times.length %>
      <% averageMinutes /= times.length %>

      <% let medianTime; %>

      <% if (times.length%2 == 1) { %>
        <% medianTime = times[((times.length+1)/2) - 1] %>

      <% } else { %>
        <% medianTime = `${Math.round((parseInt(times[((times.length)/2) - 1].split(':')[0]) + parseInt(times[((times.length)/2)].split(':')[0]))/2)}:${Math.round((parseInt(times[((times.length)/2) - 1].split(':')[1]) + parseInt(times[((times.length)/2)].split(':')[1]))/2)}`%>

      <% }%>

      <p>
        Mean Ordering Time - <%=Math.round(averageHours)%>:<%=Math.round(averageMinutes)%>
      </p>

      <p>
        Median Ordering Time - <%=medianTime%>
      </p>

    </div>
  </body>

</html>
