<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Saberchat</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/components/header.css">
    <link rel="stylesheet" href="/stylesheets/components/navbar.css">
    <link rel="stylesheet" href="/stylesheets/admin/permission.css">
    <link rel="stylesheet" href="/stylesheets/chat/new.css">
    <link rel="stylesheet" href="/stylesheets/cafe/manage.css">

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src="https://unpkg.com/@popperjs/core@2" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

    <script src="https://kit.fontawesome.com/dccc745c41.js" crossorigin="anonymous"></script>
    <script src="/javascript/cafe/search.js"></script>
  </head>
  <body>
    <%- include('../partials/navbar') %>
    <%- include('../partials/header') %>

    <div class="container mt-5">
      <div class="row">
        <div class="col-12">
          <div class="jumbotron text-center">
            <h1><i class="fas fa-coffee"></i> Manage EC Cafe</h1><br />
            <% if (open == true) { %>
              <a href="/cafe/close" class="btn btn-danger"><i class="fas fa-lock-open"></i> Close Cafe</a>

            <% } else { %>
              <a href="/cafe/open" class="btn btn-success"><i class="fas fa-lock"></i> Open Cafe</a>

            <% } %>
            <a href="/cafe/orders" class="btn btn-primary"><i class="fas fa-coffee"></i> Orders</a>
            <a href="/cafe/item/new" class="btn btn-warning"><i class="fas fa-plus-circle"></i> Add New Item</a>
            <a href="/cafe/type/new" class="btn btn-info"><i class="fas fa-plus-circle"></i> Add New Category</a>
            <a href="/cafe/data" class="btn btn-secondary"><i class="fas fa-chart-bar"></i> Cafe Data Analytics</a>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-8 offset-md-2 col-12">
          <div class="search-filter mb-3">
            <i class="fas fa-search"></i>
            <input id="search-input" oninput="search()" class="form-control" type="text" placeholder="Search..." title="Type in itemname" />
          </div>

          <% let temp;%>

          <% for (let type of types) { %>
            <% for (let i = 0; i < type.items.length-1; i ++) { %>
              <% for (let j = 0; j < type.items.length-1; j ++) { %>
                <% if (type.items[j].upvotes.length < type.items[j+1].upvotes.length) { %>
                  <%temp = type.items[j];%>
                  <%type.items[j] = type.items[j+1];%>
                  <%type.items[j+1] = temp;%>
                <% } %>
              <% } %>
            <% } %>
          <% } %>

          <% types.forEach(type => { %>
            <% if (type.items.length > 0) { %>
              <li class="list-group-item list-group-item-success category-header" id="<%=type._id%>-header">
                <div class="d-flex w-100 justify-content-between">
                  <h2 class="mb-1"><%=type.name%></h2>
                  <span><%=type.items.length%> item(s)</span>
                </div>
              </li>
              <% type.items.forEach(item => { %>
                <% if (item.isAvailable == true) { %>
                  <a href="item/<%= item._id %>" id="item-<%=item.id%>" class="list-group-item list-group-item-action menu-item <%=type.name.replace(' ', '')%>"><strong><%= item.name %></strong> (<%= item.availableItems%> orders available) <span class="upvote" title="Upvotes (Cafe admins cannot upvote items from here)"></span><strong id="upvoteCount-<%=item._id%>" class="upvote-count"> Upvotes: <%=item.upvotes.length%></strong></a>
                <% } else {%>
                  <a href="item/<%= item._id %>" id="item-<%=item.id%>" class="list-group-item list-group-item-action menu-item <%=type.name.replace(' ', '')%>"><strong><%= item.name %></strong> (Unavailable) <span class="upvote" title="Upvotes (Cafe admins cannot upvote items from here)"></span><strong id="upvoteCount-<%=item._id%>" class="upvote-count"> Upvotes: <%=item.upvotes.length%></strong></a>
                <% } %>
              <% }) %>
              <br class="category-break" id="<%=type._id%>-break"/>
            <% } %>
          <% }) %>

          <br class="category-break" id="types-break"/>
          <li class="list-group-item list-group-item-primary category-header" id="types-header">
            <div class="d-flex w-100 justify-content-between">
              <h2 class="mb-1">Item Order Categories</h2>
              <span><%=types.length%> type(s)</span>
            </div>
          </li>

          <% let upvoteCount = 0;%>

          <% types.forEach(type => { %>
            <% upvoteCount = 0;%>
            <% if (type.name != "Other") { %>
              <% for (let item of type.items) { %>
                <% upvoteCount += item.upvotes.length%>
              <% } %>
              <a href="type/<%=type._id%>" id="type-<%=type.id%>" class="list-group-item list-group-item-action menu-item ItemOrderCategories"><strong><%=type.name%></strong> (<%=type.items.length%> items) <span class="upvote" title="Sum of all upvotes for this category (Cafe admins cannot upvote items from here)"></span><strong id="upvoteCount-<%=type._id%>" class="upvote-count"> Upvotes: <%=upvoteCount%></strong> </a>
            <% } %>
          <% }) %>

          <!-- Ensures that 'other' will be last -->
          <% types.forEach(type => { %>
            <% upvoteCount = 0;%>
            <% if (type.name == "Other") { %>
              <% for (let item of type.items) { %>
                <% upvoteCount += item.upvotes.length%>
              <% } %>
              <div class="list-group-item list-group-item-action menu-item ItemOrderCategories" id="type-<%=type.id%>"><strong><%=type.name%></strong> (<%=type.items.length%> items) <strong id="modify-banned">You cannot modify this category </strong> <span title="Sum of all upvotes for this category (Cafe admins cannot upvote items from here)" class="upvote"></span><strong id="upvoteCount-<%=type._id%>" class="upvote-count"> Upvotes: <%=upvoteCount%></strong></div>
            <% } %>
          <% }) %>

          <br />
      </div>
    </div>
  </body>
</html>
