<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Saberchat</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/components/header.css">
    <link rel="stylesheet" href="/stylesheets/components/navbar.css">
    <link rel="stylesheet" href="/stylesheets/components/announcement.css">
    <link rel="stylesheet" href="/stylesheets/admin/permission.css">

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/@popperjs/core@2" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

    <script src="https://kit.fontawesome.com/dccc745c41.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <%- include('../partials/navbar') %>
    <%- include('../partials/header') %>
    <%- include('../partials/announcement') %>

    <div class="container mt-5">
      <div class="row">
        <div class="col-12">
          <div class="jumbotron text-center">
            <h1><i class="fas fa-coffee"></i> Manage EC Cafe</h1>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <li class="list-group-item list-group-item-info">
            <div class="d-flex w-100 justify-content-between">
              <h2 class="mb-1">Current Items</h2>
              <span>
                <a href="deleteItems" class="btn btn-danger disabled"><i class="fas fa-minus-circle"></i> Delete all items</a>
                <a href="newOrderItem" class="btn btn-warning"><i class="fas fa-plus-circle"></i> Add new item</a>
              </span>
            </div>
            <p class="mb-1">View cafe products</p>
          </li>
          <% items.forEach(item => { %>
            <% if (item.isAvailable == true) { %>
              <a href="item/<%= item._id %>" class="list-group-item list-group-item-action"><%= item.name %> (<%= item.availableItems%> orders available)</a>
            <% } else { %>
              <a href="item/<%= item._id %>" class="list-group-item list-group-item-action"><%= item.name %> (Unavailable)</a>
            <% }%>
          <% }) %>
          <a style="display: block; margin-top: 1rem;" href="/cafe/orders">Orders</a>
        </div>
      </div>
    </div>
  </body>
</html>
