<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Saberchat</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/components/header.css">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/components/navbar.css">
    <link rel="stylesheet" href="/stylesheets/chat/edit.css">

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/@popperjs/core@2" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

    <script src="https://kit.fontawesome.com/dccc745c41.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <%- include('../partials/navbar') %>
    <%- include('../partials/header') %>

    <div class="container mt-5">
      <div class="row">
        <div class="col-12">
          <div class="jumbotron text-center">
            <h1><i class="fas fa-coffee"></i> Order food from the EC Cafe</h1>
          </div>
        </div>
      </div>

      <div class="row mb-5">
        <div class="col-12">
          <li class="list-group-item list-group-item-info" style="margin-top: -1px;">
            <div class="d-flex w-100 justify-content-between">
              <h2 class="mb-1"><i class="fas fa-bars"></i> <a href='cafe/menu' style="color: inherit;">Menu</a></h2>
            </div>
            <p class="mb-1">All Our Available Items</p>
          </li>
        </div>
      </div>
      <div class="row mb-5">
        <div class="col-12">
          <li class="list-group-item list-group-item-info">
            <div class="d-flex w-100 justify-content-between">
              <h2 class="mb-1"><i class="fas fa-hamburger"></i> Current Orders</h2>
                <a href="cafe/order/new" class="btn btn-info"><i class="fas fa-plus-circle"></i> Order</a>
            </div>
            <p class="mb-1">View your currently active orders, or place a new one.</p>
          </li>
          <ul class="list-group">
            <% orders.reverse().forEach(function(order) { %>
              <% if (order.present == true) { %>
                <li class="list-group-item">

                  <% if (!order.charge.toString().includes('.')) { %>
                    <h4><strong>Order - $<%= order.charge %>.00</strong></h4>

                  <% } else if (order.charge.toString().split('.')[1].length == 1){ %>
                    <h4><strong>Order - $<%= order.charge %>0</strong></h4>

                  <% } else { %>
                    <h4><strong>Order - $<%= order.charge %></strong></h4>
                  <% } %>

                  <ul>
                    <% for (var i = 0; i < order.items.length; i++) { %>
                      <li>

                        <% if (!(order.items[i].quantity * order.items[i].item.price).toString().includes('.')) { %>
                          <%= order.items[i].item.name + " (" + order.items[i].quantity + " orders) - $" + order.items[i].quantity * order.items[i].item.price + ".00"%>

                        <% } else if ((order.items[i].quantity * order.items[i].item.price).toString().split('.')[1].length == 1){ %>
                          <%= order.items[i].item.name + " (" + order.items[i].quantity + " orders) - $" + order.items[i].quantity * order.items[i].item.price + "0" %>

                        <% } else { %>
                          <%= order.items[i].item.name + " (" + order.items[i].quantity + " orders) - $" + order.items[i].quantity * order.items[i].item.price %>
                        <% } %>

                      </li>
                    <% } %>
                  </ul>

                  <br /><strong>Extra Instructions: </strong><span>

                  <% if (order.instructions != "") {%>
                    <%=order.instructions%>

                  <% } else { %>
                    None
                  <% } %>

                  </span>

                  <p style="margin-top: 10px;"><em><%= order.date %></em></p>
                  <form action="cafe/order/<%=order._id%>?_method=delete" method="post">
                    <button type="submit" class="btn btn-danger"><a style="text-decoration: none; color: inherit;">Cancel Order</a></button>
                  </form>
                </li>
              <% } %>
            <% }); %>
          </ul>
        </div>
      </div>
      <div class="row mb-5">
        <div class="col-12">
          <li class="list-group-item list-group-item-info" style="margin-top: -1px;">
            <div class="d-flex w-100 justify-content-between">
              <h2 class="mb-1"><i class="fas fa-utensils"></i> Past Orders</h2>
            </div>
            <p class="mb-1">View your past orders.</p>
          </li>
          <% orders.forEach(function(order) { %>
            <% if (order.present == false) { %>
              <li class="list-group-item">

                <% if (!order.charge.toString().includes('.')) { %>
                  <h4><strong>Order - $<%= order.charge %>.00</strong></h4>

                <% } else if (order.charge.toString().split('.')[1].length == 1){ %>
                  <h4><strong>Order - $<%= order.charge %>0</strong></h4>

                <% } else { %>
                  <h4><strong>Order - $<%= order.charge %></strong></h4>
                <% } %>

                <ul>
                  <% for (var i = 0; i < order.items.length; i++) { %>
                    <li>

                      <% if (!(order.items[i].quantity * order.items[i].item.price).toString().includes('.')) { %>
                        <%= order.items[i].item.name + " (" + order.items[i].quantity + " orders) - $" + order.items[i].quantity * order.items[i].item.price + ".00"%>

                      <% } else if ((order.items[i].quantity * order.items[i].item.price).toString().split('.')[1].length == 1){ %>
                        <%= order.items[i].item.name + " (" + order.items[i].quantity + " orders) - $" + order.items[i].quantity * order.items[i].item.price + "0" %>

                      <% } else { %>
                        <%= order.items[i].item.name + " (" + order.items[i].quantity + " orders) - $" + order.items[i].quantity * order.items[i].item.price %>
                      <% } %>

                    </li>
                  <% } %>
                </ul>
              </li>
            <% } %>
          <% }); %>
        </div>
      </div>
    </div>
  </body>
</html>
