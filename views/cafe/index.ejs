<body class="mode">
<%- include('../partials/navbar') %>
<%- include('../partials/header') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="jumbotron text-center header">
                <h1><i class="fas fa-coffee"></i> No Left Turn Cafe Preorder System</h1>
            </div>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-12">
            <li class="list-group-item list-group-item-info cafe" id="menu">
                <div class="d-flex w-100 justify-content-between">
                    <h2 class="mb-1"><i class="fas fa-bars"></i> <a href='cafe/menu' class="section-heading">Menu</a>
                    </h2>
                </div>
                <p class="mb-1">All Our Available Items</p>
            </li>
        </div>
    </div>
    <div class="row mb-5">
        <div class="col-12">
            <li class="list-group-item list-group-item-info cafe">
                <div class="d-flex w-100 justify-content-between">
                    <h2 class="mb-1"><i class="fas fa-hamburger"></i> Current Orders</h2>
                    <a href="cafe/order/new" class="btn btn-info"><i class="fas fa-plus-circle"></i> Order</a>
                </div>
                <p class="mb-1">View your currently active orders, or place a new one.</p>
            </li>
            <ul class="list-group" id="active-orders">
                <% orders.reverse().forEach(order => { %>
                    <% if (order.present == true) { %>
                        <li class="list-group-item" id="<%= order._id %>">

                            <% if (!order.charge.toString().includes('.')) { %>
                                <h4 class="order-heading">Order - $<%= order.charge %>.00</h4>

                            <% } else if (order.charge.toString().split('.')[1].length == 1){ %>
                                <h4 class="order-heading">Order - $<%= order.charge %>0</h4>

                            <% } else { %>
                                <h4 class="order-heading">Order - $<%= order.charge %></h4>
                            <% } %>

                            <ul>
                                <% for (var i = 0; i < order.items.length; i++) { %>
                                    <li>

                                        <% if (!(order.items[i].quantity * order.items[i].item.price).toString().includes('.')) { %>
                                            <%= order.items[i].item.name + " (" + order.items[i].quantity + " orders) - $" + order.items[i].quantity * order.items[i].item.price + ".00" %>

                                        <% } else if ((order.items[i].quantity * order.items[i].item.price).toString().split('.')[1].length == 1){ %>
                                            <%= order.items[i].item.name + " (" + order.items[i].quantity + " orders) - $" + order.items[i].quantity * order.items[i].item.price + "0" %>

                                        <% } else { %>
                                            <%= order.items[i].item.name + " (" + order.items[i].quantity + " orders) - $" + order.items[i].quantity * order.items[i].item.price %>
                                        <% } %>

                                    </li>
                                <% } %>
                            </ul>

                            <br/><span class="instructions">Extra Instructions: </span><span>

                                <% if (order.instructions != "") { %>
                                    <%= order.instructions %>

                                <% } else { %>
                                    None
                                <% } %>

                                <p class="paying-style">

                                    <% if (order.payingInPerson) { %>
                                        Paying In-Person
                                    <% } else { %>
                                        Paying Online
                                    <% } %>
                                </p>

                  </span>

                            <p class="date"><%= order.date %></p>
                            <form action="cafe/order/<%= order._id %>?_method=delete" method="post">
                                <button type="button" data-toggle="modal" data-target="#modal-<%= order._id %>-cancel"
                                        class="btn btn-danger"><a class="cancel">Cancel Order</a></button>

                                <div class="modal fade" id="modal-<%= order._id %>-cancel" tabindex="-1"
                                     aria-labelledby="deleteModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Cancel Order?</h5>
                                                <button type="button" class="close" data-dismiss="modal"
                                                        aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                Some items may be unavailable in the quantities you ask for if you want
                                                to
                                                order again.
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">No,
                                                    Go
                                                    Back
                                                </button>
                                                <button type="button" id="<%= order._id %>-cancel"
                                                        onclick="cancel(this)"
                                                        class="btn btn-danger">Yes, Cancel My Order
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </li>
                    <% } %>
                <% }); %>
            </ul>
        </div>
    </div>
