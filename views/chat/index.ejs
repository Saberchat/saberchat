<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport">
    <title>Saberchat</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/components/navbar.css">

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/@popperjs/core@2" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

    <script src="https://kit.fontawesome.com/dccc745c41.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <%- include('../partials/navbar') %>

    <div class="container mt-5">
      <div class="row">
        <div class="col-12">
          <div class="jumbotron text-center">
            <h1><i class="fas fa-sign-in-alt"></i> Select a room to join</h1>
            <p>Connect with other members of the Alsion community.</p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <li class="list-group-item list-group-item-info">
            <div class="d-flex w-100 justify-content-between">
              <h2 class="mb-1"><i class="fas fa-user-friends"></i> Your Groups</h2>
              <a href="chat/new" class="btn btn-info"><i class="fas fa-plus-circle"></i> Create a chat room</a>
            </div>
            <p class="mb-1">Rooms you are a member of.</p>
          </li>
          <% rooms.forEach(room => { %>
            <% if (room.type == 'public' || room.members.includes(currentUser._id)) { %>
              <a href="chat/<%= room._id %>" class="list-group-item list-group-item-action"><%= room.name %></a>
            <% } %>
          <% }) %>
        </div>
      </div>
      <div class="row mb-5">
        <div class="col-12">
          <ul class="list-group">
            <li class="list-group-item list-group-item-info" style="margin-top: -1px;">
              <div class="d-flex w-100 justify-content-between">
                <h2 class="mb-1"><i class="fas fa-door-open"></i> Other rooms to join</h2>
              </div>
              <p class="mb-1">Request access to join new rooms.</p>
            </li>
            <% rooms.forEach(room => { %>
              <% if (room.type == 'private' && !(room.members.includes(currentUser._id))) { %>
                <li class="list-group-item list-group-item-action list-group-item-light">
                  <%= room.name %>
                  <form action="" class="float-right">
                    <button class="btn btn-success btn-sm">Request Membership</button></li>
                  </form>
              <% } %>
            <% }) %>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>
